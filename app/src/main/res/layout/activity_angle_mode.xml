<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#37474F"
    android:layout_height="match_parent"
    tools:context="com.example.android.concave.angleMode">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="Choose Your Preferred Mode"
        android:textSize="28sp" />

    <Button
        android:id="@+id/deg_rad"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="#FFFFFF"
        android:onClick="goToSolnA"
        android:padding="10dp"
        android:text="degrees / radians Conversion"
        android:textSize="20sp" />

    <Button
        android:id="@+id/deg_grad"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:layout_alignStart="@+id/deg_rad"
        android:layout_alignLeft="@+id/deg_rad"
        android:layout_below="@+id/deg_rad"
        android:onClick="goToSolnA"
        android:layout_marginTop="12dp"
        android:padding="10dp"
        android:text="degrees / gradians CONVERSION"
        android:textSize="20sp" />

    <Button
        android:id="@+id/rad_grad"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/deg_grad"
        android:layout_alignLeft="@id/deg_grad"
        android:background="#FFFFFF"
        android:layout_below="@+id/deg_grad"
        android:layout_marginTop="15dp"
        android:onClick="goToSolnA"
        android:padding="10dp"
        android:text="radians / gradians CONVERSION"
        android:textSize="20sp" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF"
        android:onClick="Home"
        android:padding="10dp"
        android:text="home"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="Share"
        android:background="#FFFFFF"
        android:src="@drawable/ic_1f4e1" />

    </RelativeLayout>

</ScrollView>
