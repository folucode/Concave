<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37474F"
    tools:context="com.example.android.concave.lengthMode">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="87dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="Choose Your Preferred Mode"
            android:textSize="28sp" />

        <Button
            android:id="@+id/meters_centimeter"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="70dp"
            android:onClick="goToSoln"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:padding="10dp"
            android:text="meters / centimeter Conversion"
            android:textSize="21sp" />

        <Button
            android:id="@+id/meters_kilometer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="goToSoln"
            android:layout_alignLeft="@+id/meters_centimeter"
            android:layout_alignStart="@+id/meters_centimeter"
            android:layout_below="@+id/meters_centimeter"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:text="meters / kilometer Conversion"
            android:textSize="21sp" />

        <Button
            android:id="@+id/meters_millimeters"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            android:layout_alignLeft="@+id/meters_kilometer"
            android:layout_alignStart="@+id/meters_kilometer"
            android:layout_below="@+id/meters_kilometer"
            android:onClick="goToSoln"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="meters / millimeters Conversion"
            android:textSize="21sp" />

        <Button
            android:id="@+id/centimeter_kilometer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="goToSoln"
            android:layout_alignLeft="@+id/meters_millimeters"
            android:layout_alignStart="@+id/meters_millimeters"
            android:layout_below="@+id/meters_millimeters"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:text="centimeter / kilometer Conversion"
            android:textSize="21sp" />

        <Button
            android:id="@+id/centimeter_millimeters"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="goToSoln"
            android:background="#FFFFFF"
            android:layout_alignLeft="@+id/centimeter_kilometer"
            android:layout_alignStart="@+id/centimeter_kilometer"
            android:layout_below="@+id/centimeter_kilometer"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="centimeter / millimeters Conversion"
            android:textSize="21sp" />

        <Button
            android:id="@+id/kilometer_millimeters"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/centimeter_millimeters"
            android:layout_alignStart="@+id/centimeter_millimeters"
            android:layout_below="@+id/centimeter_millimeters"
            android:layout_marginTop="15dp"
            android:onClick="goToSoln"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:text="kilometer / millimeters Conversion"
            android:textSize="21sp" />

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#FFFFFF"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:onClick="Home"
            android:padding="10dp"
            android:text="home"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#FFFFFF"
            android:layout_alignParentTop="true"
            android:onClick="Share"
            android:src="@drawable/ic_1f4e1" />

    </RelativeLayout>

</ScrollView>
